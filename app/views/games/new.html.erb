<div id="main-container">
  <h1>New Game</h1>
  <div id="letters-container">
    <% @letters.each do |letter| %>
      <p><%= letter %></p>
    <% end %>
  </div>
  <div id="form-container">
    <h3>What is the longest word you can find?</h3>
    <form action="/score" data-turbo="false" method="post" id="word-input-form">
      <input type="text" name="word_input" value="<%= params[:word_input] %>" id="input-field">
      <button type="submit" id="submit-button">Play</button>
      <%= hidden_field_tag :letters_array, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>